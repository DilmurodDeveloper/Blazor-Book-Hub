@using BlazorBookHub.Shared.Models
@inject NavigationManager NavigationManager

<div class="card h-100">
    <img src="@Book.CoverImagePath" class="card-img-top" alt="@Book.Title" />
    <div class="card-body d-flex flex-column">
        <h5 class="card-title">@Book.Title</h5>
        <p class="card-text"><strong>Author:</strong> @Book.Author</p>
        <p class="card-text">@Book.Description</p>
        <button class="btn btn-primary mt-auto" @onclick="ReadPdf">Read PDF</button>
    </div>
</div>

@code {
    [Parameter]
    public BookDto Book { get; set; } = default!;

    private void ReadPdf()
    {
        NavigationManager.NavigateTo($"/read/{Book.Id}");
    }
}
